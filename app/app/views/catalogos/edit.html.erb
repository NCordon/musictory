<h1>Editar stock</h1>

<%= form_for :catalogo, url: catalogo_path(@album), method: :patch do |album| %>

  <% if @album.errors.any? %>
    <div id="error">
      <h2>
        <%= "#{@album.errors.count} error/es" %> al intentar editar el Ã¡lbum.
      </h2>
      <ul>
        <% @album.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= album.label :titulo %><br>
    <%= album.text_field :titulo, value: @album.titulo %>
  </p>

  <p>
    <%= album.label :grupo %><br>
    <%= album.text_field :grupo, value: @album.grupo, list: 'grupos-list' %>
  </p>

  <datalist id="grupos-list">
    <%= Catalogo.select(:grupo).distinct.each do |album| %>
      <option value='<%=album.grupo%>'></option>
    <%end%>
  </datalist>

  <p>
    <%= album.label :genero %><br>
    <%= album.text_field :genero, value: @album.genero, list: 'generos-list' %>
  </p>
  <datalist id='generos-list'>
    <%= Catalogo.select(:genero).distinct.each do |album| %>
      <option value='<%=album.genero%>'></option>
    <%end%>
  </datalist>


  <%= fields_for @album.cd do |cd| %>
    <p>
      <%= cd.label :cantidad %><br>
      <%= cd.number_field :cantidad, min: 0 %>
    </p>
  <% end %>

  <%= fields_for @album.vinilo do |cd| %>
    <p>
      <%= cd.label :cantidad %><br>
      <%= cd.number_field :cantidad, min: 0 %>
    </p>
  <% end %>

  <p>
    <%= album.submit %>
  </p>

<% end %>


<%= link_to 'Back', catalogos_path %>
