<%= form_for :catalogo, url: catalogos_path do |c| %>

  <% if @catalogo.errors.any? %>
    <div id="error">
      <h2>
        <%= "#{@catalogo.errors.count} error/es" %> al intentar editar el Ã¡lbum.
      </h2>
      <ul>
        <% @catalogo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= c.label :titulo %><br>
    <%= c.text_field :titulo %>
  </p>

  <p>
    <%= c.label :grupo %><br>
    <%= c.text_field :grupo, list: 'grupos-list' %>
  </p>

  <datalist id="grupos-list">
    <%= Catalogo.select(:grupo).distinct.each do |album| %>
      <option value='<%=album.grupo%>'></option>
    <%end%>
  </datalist>

  <p>
    <%= c.label :genero %><br>
    <%= c.text_field :genero, list: 'generos-list' %>
  </p>
  <datalist id='generos-list'>
    <%= Catalogo.select(:genero).distinct.each do |album| %>
      <option value='<%=album.genero%>'></option>
    <%end%>
  </datalist>


  <p>
    <%= c.submit %>
  </p>
<% end %>
