
<p>
  Título:
  <%= @album.titulo %>
</p>

<p>
  Grupo:
  <%= @album.grupo %>
</p>

<p>
  Genero:
  <%= @album.genero %>
</p>

<h2>Stock</h2>
<p>
  Stock CDs disponible:
  <%= @album.cd ? @album.cd.cantidad : 0 %>
  Stock Vinilos disponible:
  <%= @album.vinilo ? @album.vinilo.cantidad : 0 %>
</p>


<h2>Añade stock:</h2>
<%= form_for([@album, @album.build_cd]) do |f| %>
  <p>
    <%= f.label :cantidad %><br>
    <%= f.text_field :cantidad %>
  </p>
  <p>
    <%= f.submit "Cambiar cantidad"%>
  </p>
<% end %>

<%= form_for([@album, @album.build_vinilo]) do |f| %>
  <p>
    <%= f.label :cantidad %><br>
    <%= f.text_field :cantidad %>
  </p>
  <p>
    <%= f.submit "Cambiar cantidad"%>
  </p>
<% end %>
