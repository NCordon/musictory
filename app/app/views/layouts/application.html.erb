<!DOCTYPE html>
<html>
  <head>
    <title>Musictory</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <style>
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
    }

    li {
        float: left;
    }

    li a {
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
    }

    li a:hover {
        background-color: #111;
    }
  </style>

  <nav>
    <ul>
      <li> <%= link_to 'Stock', catalogos_path %> </li>
      <li> <%= link_to 'Ventas', ventas_path %> </li>
    </ul>
  </nav>

  <body>
    <%= yield %>
  </body>
</html>
