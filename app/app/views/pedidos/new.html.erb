<%= form_for @pedido, url: pedidos_path  do |pedido| %>
  <%= render partial: '/shared/errors', object: @pedido %>

  <p>
    <%= pedido.label :titulo, "TÃ­tulo"%><br>
    <%= pedido.text_field :titulo, value: params[:titulo] %>
  </p>

  <p>
    <%= pedido.label :grupo, "Grupo" %><br>
    <%= pedido.text_field :grupo, value: params[:grupo] %>
